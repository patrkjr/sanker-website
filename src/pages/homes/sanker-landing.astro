---
import sankerAppImage from '~/assets/images/sanker-app-1-phone.png';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import SimpleFooter from '~/components/widgets/SimpleFooter.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Sanker - Find dit næste eventyr',
};
---

<Layout metadata={metadata}>
  <Fragment slot='header'>
    <Header
      links={[
        // { text: 'Hjem', href: '#' },
        // { text: 'Om Sanker', href: '#about' },
      ]}
      actions={[
        {
          text: 'Download appen',
          href: '#',
        },
      ]}
      isSticky
      showRssFeed={false}
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    id='hero'
    title='Køb og sælg brugt friluftsudstyr med Sanker'
    tagline='Lokalt, nemt og bæredygtigt'
    actions={[{ variant: 'primary', text: 'Begynd at udforske med Sanker', href: getPermalink('/#') }]}
    image={{
      src: sankerAppImage,
      alt: 'Sanker app på iPhone',
      loading: 'eager',
    }}
  >
    <Fragment slot='subtitle'>
      Sanker er dit lokale fællesskab for brugt friluftsudstyr. Vi forbinder dig med andre eventyrlystne i dit område,
      så du kan finde det perfekte udstyr til dit næste outdoor-eventyr—sikkert.
    </Fragment>
  </Hero2>

  <!-- Simple Footer **************** -->

  <SimpleFooter />
</Layout>
