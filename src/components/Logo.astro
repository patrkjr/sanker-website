---
import { SITE } from 'astrowind:config';
import favicon from '~/assets/favicons/favicon.svg';
import Image from '~/components/common/Image.astro';
---

<span
  class='self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white flex items-center gap-2'
>
  <Image src={favicon} alt='Logo' class='w-6 h-6' width={24} height={24} layout='fixed' />
  {SITE?.name}
</span>
