---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #38a169;
    --aw-color-secondary: #38a169;
    --aw-color-accent: #f28c38;

    --aw-color-text-heading: #0a0f0a;
    --aw-color-text-default: #1f291f;
    --aw-color-text-muted: #6b726b;
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: #0a0f0a;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #38a169;
    --aw-color-secondary: #38a169;
    --aw-color-accent: #f28c38;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #0a0f0a;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
